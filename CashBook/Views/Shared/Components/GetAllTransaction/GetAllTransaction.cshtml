@model List<CashBook.ViewModels.TransactionViewModel>
@{
    var type = Model[0].Type; 
}

<div class="table-responsive">
    <table class="table table-striped table-borderless table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Amount</th>
                <th>Description</th>
                @if(type != "Contra")
                {
                    <th>Category</th>
                    <th>Payment</th>
                }else{
                    <th>From</th>
                    <th>To</th>
                }                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr onclick="GetTransactionDetails(@item.Id)">
                    <td>                                        
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        <b>
                        @Html.DisplayFor(modelItem => item.Amount)
                        </b>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    @if(type != "Contra")
                    {
                        <td>
                            <b>
                            @Html.DisplayFor(modelItem => item.CategoryNameExpense)
                            </b>    
                        </td>
                        <td>
                            <b>
                            @Html.DisplayFor(modelItem => item.PaymentFromNameSingle)
                            </b>
                        </td>
                    }else{
                        <td>
                            <b>
                            @Html.DisplayFor(modelItem => item.PaymentFromNameSingle)
                            </b>    
                        </td>
                        <td>
                            <b>
                            @Html.DisplayFor(modelItem => item.PaymentToName)
                            </b>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
   